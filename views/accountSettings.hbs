{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger" xmlns="http://www.w3.org/1999/html">{{msg}}</div>
    {{/each}}
{{/if}}
<div class="container">
    <h1>Edit Profile</h1>
    <hr>
    <div class="row">
        <!-- left column -->
        <div class="col-md-3">
            <div class="text-center">
                {{#each results}}
                    <img src="/{{avatarLink}}" class="img-fluid img-thumbnail" alt="avatar">
                {{else}}
                    <img src="//placehold.it/100" class="img-fluid img-thumbnail" alt="avatar">
                {{/each}}
                <h6>Upload a different photo...</h6>

                <input type="file" class="form-control">
            </div>
        </div>

        <!-- edit form column -->
        <div class="col-md-9 personal-info">

            <h2>Personal info</h2>

            <form method="post" class="form-horizontal" role="form" action="/settings">
                {{#each results}}

                    <div class="form-group">
                        <label class="col-lg-3 control-label">First name:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="{{firstName}}" name="firstName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Last name:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="{{lastName}}" name="lastName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-3 control-label">Email:</label>
                        <div class="col-lg-8">
                            <input class="form-control" type="text" value="{{email}}" name="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label">Phone Number:</label>
                        <div class="col-md-8">
                            <input class="form-control" type="text" value="{{phoneNumber}}" name="phoneNumber">
                        </div>
                    </div>
                {{/each}}
                <div class="form-group">
                    <label class="col-md-3 control-label">New Password:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="password" value="" name="newPassword">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label">Confirm new password:</label>
                    <div class="col-md-8">
                        <input class="form-control" type="password" value="" name="newPassword2">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-3 control-label"></label>
                    <div class="col-md-8">
                        <button type="submit" class="btn btn-primary" formaction="/settings/save"> Save Changes</button>
                        <button type="submit" class="btn btn-default" formaction="/settings/cancel">Cancel</button>
                        <button type="submit" class="btn btn-danger" formaction="/settings/delete" style="float: right">
                            Delete account
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<hr>