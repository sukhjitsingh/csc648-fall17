<div class="container">
    <div class="row">


        <div class="col-md-12">
            <h4>My Favorites</h4>
            <div class="table-responsive-sm table-striped">


                <table id="mytable" class="table table-bordred table-striped">

                    <thead class="thread-light">
                    <th>Address</th>
                    <th>Saved At</th>
                    <th>Delete</th>
                    </thead>
                    <tbody>

                    {{#each result}}
                        <tr>
                            <td>
                                <form method="post">
                                    <button style="border: none; padding:0; background: none;"
                                            formaction="/listingdetails/{{id}}"
                                            name="listingdetailbutton" value="{{id}}">
                                        <u>{{streetAddress}}{{city}}{{state}}{{zipcode}}</u>
                                    </button>
                                </form>
                            </td>

                            <td>{{createdAt}}</td>
                            <td>
                                <p data-placement="top" data-toggle="tooltip" title="Delete">
                                    <button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal"
                                            data-target="#delete">Delete
                                    </button>
                                </p>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span
                        class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger"> Are you sure you want to delete this Record?{{result.id}}</div>

            </div>
            <div class="modal-footer ">
                <form method="post">
                    <button type="submit" class="btn btn-success" formaction="/favorites/delete" name="deleteButton" value="{{result.id}}">Yes</button>
                </form>
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
