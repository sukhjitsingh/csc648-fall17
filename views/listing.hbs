{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<form method="post" action="listing">
    <div class="form-row">
        <h1> Listing Address</h1>
    </div>
    <div class="form-group col-md-6">
        <label for="inputAddress">Address</label>
        <input type="text" class="form-control" name="inputAddress" placeholder="1234 Main St">
    </div>
    <div class="form-group col-md-6">
        <label for="inputAddress2">Address 2</label>
        <input type="text" class="form-control" name="inputAddress2" placeholder="Apartment, studio, or floor">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" name="inputCity" placeholder ="San Francisco">
        </div>
        <div class="form-group col-md-4">
            <label for="inputState">State</label>
            <input type="text" class="form-control" name="inputState" placeholder ="California">
        </div>
        <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input type="text" class="form-control" name="inputZip" placeholder = "94121">
        </div>
    </div>
    <h1> Facts and Features</h1>
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="bedroomNum">Bedrooms</label>
            <input type="text" class="form-control" name="bedroomNumber" placeholder ="Number of beds">
        </div>
        <div class="form-group col-md-2">
            <label for="bathroomNum">Bathrooms</label>
            <input type="text" class="form-control" name="bathroomNum" placeholder ="Number od bath">
        </div>
        <div class="form-group col-md-2">
            <label for="Flooring">Flooring</label>
            <input type="text" class="form-control" name="Flooring" placeholder ="Floor size">
        </div>
        <div class="form-group col-md-2">
            <label for="buildDate">Build date</label>
            <input type="text" class="form-control" name="builtDate" placeholder ="Built in">
        </div>
        <div class="form-group col-md-2">
            <label for="price">Price</label>
            <input type="text" class="form-control" name="price" placeholder ="price">
        </div>
        <br>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>