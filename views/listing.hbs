<div class="container">
    <!--Form tag start-->
    <form method="POST" action="/listing">

        <div class="row">

            <!--Property Information start-->
            <div id="propertyInformation" class="col-md-6">
                <h3>Fill in the property information</h3>

                <div class="form-row">
                    <div class="form-group col-md-12 ">
                        <label for="streetAddress">Address *</label>
                        <input type="text" id="inputAddress" class="form-control" name="streetAddress" placeholder="1234 Main St" maxlength="40">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="streetAddress2">Address 2</label>
                        <input type="text" id="inputAddress2" class="form-control" name="streetAddress2" placeholder="Apartment, studio, or floor" maxlength="40">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-5">
                        <label for="city">City *</label>
                        <input type="text" id="inputCity" class="form-control" name="city" placeholder="San Mateo" pattern="[a-zA-Z ]+" maxlength="40">
                    </div>

                    <div class="form-group col-md-4">
                        <label for="state">State *</label>
