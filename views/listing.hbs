                        <input type="number" id="inputPrice" min="0"  class="form-control" placeholder="price" name="price">
                    </div>

                    <div class="form-group col-md-6">
                        <label for="builtYear">Build year *</label>
                        <select id="builtYear" class="form-control"></select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label>Lot size *</label>
                        <select class="form-control">
                            <option selected disabled>Choose the size of lot</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>

                    <div class="form-group col-md-6">
