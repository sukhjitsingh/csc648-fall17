            <button type="submit" class="btn btn-light " formaction="/listing" style="margin-left:10px">Add pictures</button>
        </div>


    </form>
</div>

<script>
    //Year printout
    var startYear = new Date().getFullYear();
    var endYear = 1800;
    var options = "<option selected disabled> Choose a year built </option>";
    for(var year = startYear ; year >= endYear; year--){
        options += "<option>"+ year +"</option>";
    }
    document.getElementById("builtYear").innerHTML = options;
</script>
