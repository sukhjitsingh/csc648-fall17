                    <div class="form-group col-md-6">
                        <label>Type Of Home *</label>
                        <select name="typeOfHome" class="form-control">
                            <option selected disabled>Choose the type of home</option>
                            <option value="Apartment">Apartment</option>
                            <option value="Condo">Condo</option>
                            <option value="House">House</option>
                            <option value="Manufactured">Manufactured</option>
                        </select>
                    </div>

                    <div class="form-group col-md-6">
                        <label>Parking *</label>
                        <select class="form-control">
                            <option selected disabled>Choose the # of parking</option>
                            <option value="0">0</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label>Description</label>
                        <textarea style="height:150px" type="text" min="0" class="form-control" name="Description"></textarea>
                    </div>
                </div>

            </div>
            <br>
        </div>
        <button type="submit" class="btn btn-primary pull-right" formaction="/listing/create">Create Listing</button>
    </form>
    <form method="POST" action="/listing" enctype="multipart/form-data">
