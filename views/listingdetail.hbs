<style>
    .img-responsive,
    .thumbnail > img,
    .thumbnail a > img,
    .carousel-inner > .item > img,
    .carousel-inner > .item > a > img {
        display: block;
        width: 100%;
        height: 100%;
    }

    .iframe-container > * {
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
    }

    .img-center {
        margin: 0 auto;
    }
</style>

<div class="container">
    <h4>Listing #{{listingNumber}} 12345</h4>
    <hr>
    <!--house images-->
    <div class="row">

        <div class="col-md-6">
            <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <!-- Slide One - Set the background image for this slide in the line below -->
                    <div class="carousel-item active">
                        <img class="img-responsive center-block img-center img-fluid"
                             style="height: 400px; width: auto"
                             src="https://i.pinimg.com/736x/86/1e/b7/861eb7aacc73a0344fffd578603ee230--craftsman-style-house-plans-craftsman-houses.jpg"
                             alt="First Slide"/>
                    </div>
                    <!-- Slide Two - Set the background image for this slide in the line below -->
                    <div class="carousel-item">
                        <img class="img-responsive center-block img-center img-fluid"
                             style="height: 400px; width: auto"
                             src="https://i.pinimg.com/736x/73/de/32/73de32f9e5a0db66ec7805bb7cb3f807--navy-blue-houses-blue-and-white-houses-exterior.jpg"
                             alt="Second Slide"/>
                    </div>
                    <!-- Slide Three - Set the background image for this slide in the line below -->
                    <div class="carousel-item">
                        <img class="img-responsive center-block img-center img-fluid"
                             style="height: 400px; width: auto"
                             src="https://i.pinimg.com/736x/1e/1e/ca/1e1eca7542a9ab50af82b6fc19594fc4--my-dream-house-future-house.jpg"
                             alt="Third Slide"/>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

        </div>


        <!--map-->
        <div class="col-md-6" style="width: 100%">
            <div id="iframe-container" style="width: 100%; height: 100%;">
                <iframe style="border:0; width: 100%; height: 100%;"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAeJ-EPgN1ctwzOBO6-jyseWKdl_C-wqxA&q=San Francisco 1001 Potrero Ave California 94110 {{city}} {{addressNumber}} {{street}} {{state}}  {{zipCode}}"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>

    <!--house details-->
    <div class="row">
        <div class="col-md-6">
            <br>
            <h1 style="text-align: center">Listing Details</h1>
            <hr>
            <ul>
                Address: {{addressNumber}} {{street}} {{city}} {{state}} {{zipCode}} 1001 Potrero Ave San Francisco
                California 94110
                <br>
                Price: ${{price}}1000.00
                <br>
                Number of Bedrooms: {{bedrooms}} 4
                <br>
                Number of Bathrooms: {{bathrooms}} 2
                <br>
                Square Feet: {{size}} 500 square feet
                <br>
            </ul>
            <br>
            <h1 style="text-align: center">Features</h1>
            <hr>
            <ul>
                Type: {{typeOfHouse}} multi-family
                <br>
                Year Built: {{yearBuilt}} 1996
                <br>
                Heating: {{heating}} yes
                <br>
                Cooling: {{cooling}} yes
                <br>
                Parking: {{parkingSpace}} 3 spaces
                <br>
            </ul>

        </div>

        <!--contact seller-->
        <div class="col-md-6">
            <br>
            <h1 style="text-align: center">Contact Agent:</h1>
            <hr>
            <p style="text-align: center">
                Terry Crews
                <br>
                {{phoneNumber}} (415) 333 - 4444 </p>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" id="name" name="name" placeholder="Name"
                           value="Chris Rock{{firstName}} {{lastName}}" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Email"
                           value="chrisrock@gmail.com{{email}}" required>
                </div>
                <div class="form-group">
                    <input type="phone-number" class="form-control" placeholder="Phone Number" name="phoneNumber"
                           value="(415) 555 - 6666{{phoneNumber}}">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject"
                           value="Listing Number: 12345{{listingNumber}}"
                           required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="textArea" id="message" placeholder="Message"
                              rows="7"
                    >Hello Terry Crews{{agent}}, I am interested in 1001 Potrero Ave San Francisco, California 94110 {{addressNumber}} {{street}} {{city}} {{state}} {{zipCode}}</textarea>
                </div>
                <button type="button" id="cancel" name="cancel" class="btn btn-danger pull-left">Cancel</button>
                <button type="button" id="sendMessage" name="sendMessage" class="btn btn-success pull-right">Send
                </button>
            </form>

        </div>
    </div>
</div>