<div class="container">
    <h1>{{property.streetAddress}} {{property.streetAddress2}}, {{property.city}}
        , {{property.state}} {{property.zipCode}}</h1>
    <hr>
    <!--house images-->
    <div class="row">

        <div class="col-sm-6">
            <div id="carouselIndicators" class="carousel slide" data-ride="carousel">

                    <ol class="carousel-indicators">
                        {{#each images}}
                        {{#if @first}}
                            <li data-target="#carouselIndicators" data-slide-to="{{images.imageId}}"
                                class="active"></li>
                        {{else}}
                            <li data-target="#carouselIndicators" data-slide-to="{{images.imageId}}"></li>
                        {{/if}}
                        {{/each}}
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <!-- Slide One - Set the background image for this slide in the line below -->
                        {{#each images}}
                        {{#if @first}}
                            <div class="carousel-item active fixedHeight">
                                <img class="img-responsive img-center"
                                     src="{{imageLink}}"
                                     alt="House Slide"/>
                            </div>
                        {{else}}
                            <div class="carousel-item fixedHeight">
                                <img class="img-responsive img-center"
                                     src="{{imageLink}}"
                                     alt="House Slide"/>
                            </div>
                        {{/if}}
                        {{/each}}
                    </div>
                <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <!-- /.carousel -->
        </div>


        <!--map-->
        <div class="col-sm-6 widthOneHundredPercent">
            <div id="iframe-container" class="widthAndHeightOneHundredPercent">
                <iframe class="widthAndHeightOneHundredPercent removeBorder"
                        src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAeJ-EPgN1ctwzOBO6-jyseWKdl_C-wqxA&q={{property.city}} {{property.streetAddress}} {{property.state}} {{property.zipcode}}"
                        allowfullscreen>
                </iframe>
            </div>
        </div>
    </div>

    <!--house details-->
    <br>
    <div class="row">
        <div class="col-md-6">
            <h1 class="text-center">Details</h1>
            <hr>
            <!--details start-->
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <b>Address:</b> {{property.streetAddress}} {{property.streetAddress2}}, {{property.city}}
                        , {{property.state}} {{property.zipCode}}
                    </li>
                    <li class="list-group-item">
                        <b>Price:</b> ${{property.price}}
                    </li>
                    <li class="list-group-item">
                        <b>Number of Bedrooms:</b> {{property.bedrooms}}
                    </li>
                    <li class="list-group-item">
                        <b>Number of Bathrooms:</b> {{property.bathrooms}}
                    </li>
                    <li class="list-group-item">
                        <b>Square Feet:</b> {{property.size}} 500 square feet
                    </li>
                    <li class="list-group-item">
                        <b>Type:</b> {{property.typeOfHouse}} multi-family
                    </li>

                    <li class="list-group-item">
                        <b>Year Built:</b> {{property.buildYear}}
                    </li>

                    <li class="list-group-item">
                        <b>Heating:</b> {{property.heating}} yes
                    </li>

                    <li class="list-group-item">
                        <b>Cooling:</b> {{property.cooling}} yes
                    </li>

                    <li class="list-group-item">
                        <b>Parking:</b> {{property.parkingSpace}} 3 spaces
                    </li>
                </ul>
            </div>
            <!--details end-->
        </div>

        <!--contact agent start-->
        <div class="col-md-6">
            <h1 class="text-center">Contact Agent:</h1>
            <hr>

                <!--contact agent card start-->
                <div class="container-fluid card pb-3 pt-3">
                    <h4 class="card-header text-center">{{agent.firstName}} {{agent.lastName}}
                    <br>
                    {{agent.phoneNumber}}
                    </h4>
                    <!--contact form start-->
                    <div class="card-block">
                        <form method="post" action="/listingDetails">
                            <div class="form-group pt-2">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Full Name"
                                       value="" maxlength="40" pattern="[a-zA-Z ]+" required>
                                <input type="email" class="form-control" id="email" name="email" placeholder="Email"
                                       value="" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$" maxlength="40" required>
                                <input type="phone-number" class="form-control" placeholder="Phone Number" name="phoneNumber"
                                       value="" maxlength="11" required>
                                <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject"
                                       value="Listing Number: {{property.id}}"
                                       required>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" type="textArea" name="message" id="message" placeholder="Message" rows="7">Hello {{agent.firstName}} {{agent.LastName}}, I am interested in your property: {{property.streetAddress}}, {{property.city}}, {{property.state}} {{property.zipCode}}</textarea>
                            </div>
                            <button type="submit" id="sendMessage" name="sendMessage"
                                    class="btn btn-success btn-block" formaction="/listingDetails/contact"  value = "{{property.id}}">Contact Agent
                            </button>
                        </form>
                    </div>
                    <!--contact form end-->

                </div>
                <!--contact form end-->

            </div>
            <!--contact agent card end-->

        </div>
        <!--contact agent end-->

    </div>
</div>