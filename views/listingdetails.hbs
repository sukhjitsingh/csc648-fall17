<div class="container">
    {{#each results}}
        <h1>{{streetAddress}} {{streetAddress2}}, {{city}}, {{state}} {{zipCode}}</h1>
        <hr>
        <!--house images-->
        <div class="row">

            <div class="col-md-6">
                <div id="carouselIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner" role="listbox">
                        <!-- Slide One - Set the background image for this slide in the line below -->
                        <div class="carousel-item active">
                            <img class="img-responsive img-center fixedHeight"
                                 src="/{{imageLink}}"
                                 alt="First Slide"/>
                        </div>
                        <!-- Slide Two - Set the background image for this slide in the line below -->
                        <div class="carousel-item">
                            <img class="img-responsive img-center fixedHeight"
                                 src="https://i.pinimg.com/736x/73/de/32/73de32f9e5a0db66ec7805bb7cb3f807--navy-blue-houses-blue-and-white-houses-exterior.jpg"
                                 alt="Second Slide"/>
                        </div>
                        <!-- Slide Three - Set the background image for this slide in the line below -->
                        <div class="carousel-item">
                            <img class="img-responsive img-center fixedHeight"
                                 src="https://i.pinimg.com/736x/1e/1e/ca/1e1eca7542a9ab50af82b6fc19594fc4--my-dream-house-future-house.jpg"
                                 alt="Third Slide"/>
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#carouselIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>

            </div>


            <!--map-->
            <div class="col-md-6" class="widthOneHundredPercent">
                <div id="iframe-container" class="widthAndHeightOneHundredPercent">
                    <iframe class="widthAndHeightOneHundredPercent removeBorder"
                            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAeJ-EPgN1ctwzOBO6-jyseWKdl_C-wqxA&q={{city}} {{streetAddress}} {{state}} {{zipcode}}"
                            allowfullscreen>
                    </iframe>
                </div>
            </div>
        </div>

        <!--house details-->
        <br>
        <div class="row">
            <div class="col-md-6">
                <h1 class="text-center">Details</h1>
                <hr>
                <!--details start-->
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <b>Address:</b> {{streetAddress}} {{streetAddress2}}, {{city}}, {{state}} {{zipCode}}
                        </li>
                        <li class="list-group-item">
                            <b>Price:</b> ${{price}}
                        </li>
                        <li class="list-group-item">
                            <b>Number of Bedrooms:</b> {{bedrooms}}
                        </li>
                        <li class="list-group-item">
                            <b>Number of Bathrooms:</b> {{bathrooms}}
                        </li>
                        <li class="list-group-item">
                            <b>Square Feet:</b> {{size}} 500 square feet
                        </li>
                    </ul>
                </div>
                <!--details end-->

                <br>
                <h1 class="text-center">Features</h1>
                <hr>

                <!--features start-->
                <div class="card">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <b>Type:</b> {{typeOfHouse}} multi-family
                        </li>

                        <li class="list-group-item">
                            <b>Year Built:</b> {{buildYear}}
                        </li>

                        <li class="list-group-item">
                            <b>Heating:</b> {{heating}} yes
                        </li>

                        <li class="list-group-item">
                            <b>Cooling:</b> {{cooling}} yes
                        </li>

                        <li class="list-group-item">
                            <b>Parking:</b> {{parkingSpace}} 3 spaces
                        </li>
                    </ul>
                </div>
                <!--features end-->
            </div>

            <!--contact agent start-->
            <div class="col-md-6">
                <h1 class="text-center">Contact Agent:</h1>
                <hr>

                <!--contact agent card start-->
                <div class="card">
                    <h4 class="card-header text-center">{{agentName}}Terry Crews
                    <br>
                    {{phoneNumber}}(415)324-4234
                    </h4>
                    <!--contact form start-->
                    <div class="card-block">
                        <form>
                            <div class="form-group">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Full Name"
                                       value="{{firstName}}{{lastName}}" required>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="email" name="email" placeholder="Email"
                                       value="{{email}}" required>
                            </div>
                            <div class="form-group">
                                <input type="phone-number" class="form-control" placeholder="Phone Number" name="phoneNumber"
                                       value="{{phoneNumber}}">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="subject" name="subject" placeholder="Subject"
                                       value="Listing Number: {{id}}"
                                       required>
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" type="textArea" id="message" placeholder="Message" rows="7">Hello {{agent}}Terry Crews, I am interested in {{streetAddress}}, {{city}}, {{state}} {{zipCode}}</textarea>
                            </div>
                            <button type="button" id="sendMessage" name="sendMessage"
                                    class="btn btn-success widthOneHundredPercent">Submit
                            </button>
                        </form>
                    </div>
                    <!--contact form end-->

                </div>
                <!--contact agent card end-->

            </div>
            <!--contact agent end-->

        </div>
    {{/each}}
</div>