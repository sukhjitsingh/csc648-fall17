<div class="container">
    <h2 class="page-header">Account Login</h2>
    <form method="post" action="/login">
        <div class="row">
            <div id="loginInformation" class="col-md-6">
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password">
                </div>
                <button type="submit" class="btn btn-danger pull-left" formaction="/login">Cancel</button>

                <button type="submit" class="btn btn-success pull-right" formaction="/login/signin">Log in</button>
            </div>

            <div id="signUpLink" class="col-md-6">
                <h5>Need an account? Click the button below to sign up</h5>
                <br>
                <button type="submit" class="btn btn-primary" formaction="/login/signup">Sign up</button>

            </div>

        </div>
    </form>
</div>